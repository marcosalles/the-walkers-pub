# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/										controllers.MainController.home()
GET		/auth									controllers.MainController.authenticated()
GET		/signup									controllers.UserController.signUpLink()
POST	/signup									controllers.UserController.signUp()
POST	/login									controllers.UserController.login()
GET		/users									controllers.UserController.users()

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file							controllers.Assets.at(path="/public", file)
GET		/webjars/*file							controllers.WebJarAssets.at(file)
