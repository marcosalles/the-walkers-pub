# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Main
GET		/										controllers.MainController.home()
GET		/TODO									controllers.MainController.todo()

# User
GET		/content/users/:content					controllers.UserController.content(content:String)
GET		/user/sign-up							controllers.UserController.signUpForm()
POST	/user/sign-up							controllers.UserController.signUp()
POST	/user/update							controllers.UserController.update()
POST	/user/login								controllers.UserController.login()
GET		/user/logout							controllers.UserController.logout()
GET		/user/:id/settings						controllers.UserController.settingsForm(id: Long)
GET		/user/:id/profile						controllers.UserController.profileForm(id: Long)
GET		/user/:id/decks							controllers.UserController.decks(id: Long)

# Deck
GET		/content/decks/:content					controllers.DeckController.content(content:String)
GET	 	/deck/create							controllers.DeckController.createDeckForm()
POST 	/deck/create							controllers.DeckController.createDeck()
POST 	/deck/add								controllers.DeckController.addCard()
GET		/deck/search							controllers.DeckController.search()
GET		/deck/random							controllers.DeckController.randomDeck()

# Card
GET		/card/search							controllers.CardController.search()
GET		/card/:id								controllers.CardController.card(id:String)

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file							controllers.Assets.at(path="/public", file)
GET		/webjars/*file							controllers.WebJarAssets.at(file)
