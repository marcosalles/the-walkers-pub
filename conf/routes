# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Main
GET		/										controllers.MainController.home()
GET		/auth									controllers.MainController.authenticated()

# User
GET		/sign-up								controllers.UserController.signUpForm()
POST	/sign-up								controllers.UserController.signUp()
GET		/login									controllers.UserController.loginForm()
POST	/login									controllers.UserController.login()
GET		/logout									controllers.UserController.logout()
GET		/:id/settings							controllers.UserController.settingsForm(id: Long)

# Deck
GET		/featured								controllers.DeckController.featuredDecks()

# Card
GET		/card/search							controllers.CardController.buscaForm()
POST	/card/search							controllers.CardController.busca()

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file							controllers.Assets.at(path="/public", file)
GET		/webjars/*file							controllers.WebJarAssets.at(file)
